   http://faculty.washington.edu/tgis/schemasProject/xsd4md/schema-4-properties.xsd">
   <uid>p90</uid>
   <labels>
      <platformIndependent>type</platformIndependent>
      <dc>type</dc>
   </labels>
   <uwRequired>
      <uwStandalone>yes</uwStandalone>
      <uwObject>yes</uwObject>
      <uwItem>no</uwItem>
   </uwRequired>
   <cdm>
      <label>Type</label>
      <cdmDatatype>text</cdmDatatype>
      <cdmLarge>no</cdmLarge>
      <searchable>yes</searchable>
      <hidden>yes</hidden>
      <cdmRequired>no</cdmRequired>
      <cdmControlledVocab>no</cdmControlledVocab>
   </cdm>
   <dspace>
      <dspaceProperty/>
   </dspace>
   <descriptions>
      <definition>
         <para>Describes the nature or genre of the content of the resource.</para>
      </definition>
      <instructions co="no">
         <para>Input a value from the Dublin Core Type Vocabulary at http://dublincore.org/documents/dcmi-terms/.</para>
      </instructions>
      <instructions co="item">
         <para>Optional: input a value from the Dublin Core Type Vocabulary at http://dublincore.org/documents/dcmi-terms/.</para>
         <para>Not required for all compound object items. Use as needed. Recommended: enter type values when the collection resources are mixed media.</para>
      </instructions>
      <!-- NOTE
         This property has uwRequired > object = 'yes' 
         Yet as noted here MIG decided that it should *not* be included in the object description -->
      <!-- MIG decision 2020-05: do not include this property in the object description
         <instructions co="object">
         <para>Input a value from the Dublin Core Type Vocabulary at http://dublincore.org/documents/dcmi-terms/.</para>
         <para>Separate multiple values with a semi-colon.</para>
      </instructions>-->
      <customization co="object" dd="p16786coll3" resourceType="text song oh">
         <para>Values for this property must come from the &lt;a href="https://www.dublincore.org/specifications/dublin-core/dcmi-terms/#section-7"&gt;DCMI Type Vocabulary&lt;/a&gt;.</para>
         <para>For textual-resource, ballad, and oral history compound objects, provide the following value:</para>
         <para>Collection</para>
      </customization>
      <customization co="item" dd="p16786coll3" resourceType="text">
         <para>Values for this property must come from the &lt;a href="https://www.dublincore.org/specifications/dublin-core/dcmi-terms/#section-7"&gt;DCMI Type Vocabulary&lt;/a&gt;.</para>
         <para>For image-file compound-object items (digitized pages), provide one or both of the following values depending on content:</para>
         <para>Text</para>
         <para>StillImage</para>
         <para>&lt;br/&gt;Separate multiple entries with a semicolon and space (“; “).</para>
         <para>Order of values does not matter.</para>
      </customization>
      <customization co="item" dd="p16786coll3" resourceType="song">
         <para>For audio-file compound-object items (ballad recordings), provide the following value:</para>
         <para>Sound</para>
         <para>For image-file compound-object items which are performer photographs, provide the following value:</para>
         <para>StillImage</para>
         <para>For image-file compound-object items which are digitized sheet music, provide the following value:</para>
         <para>Image</para>
      </customization>
      <customization co="item" dd="p16786coll3" resourceType="oh">
         <para>For audio-file compound-object items (interview recordings), provide the following value:</para>
         <para>Sound</para>
         <para>For image-file compound-object items which are interviewee photographs, provide the following value:</para>
         <para>StillImage</para>
         <para>For image-file compound-object items which are interview transcripts, provide the following value:</para>
         <para>Text</para>
      </customization>
   </descriptions>
   <examples>
      <example co="no">
         <para>SillImage</para>
      </example>
      <!--MIG decision 2020-05: do not include this property in the object description
         <example co="object">
         <para>Sound</para>
         <para>Sound; SillImage</para>
         <para>Sound; Text; StillImage</para>
      </example>-->
      <example co="item">
         <para>StillImage</para>
      </example>
      <customization co="item" dd="uwtoh">
         <para>Sound</para>
         <para>StillImage</para>
         <para>Text</para>
      </customization>
      <customization co="no" dd="rp">
         <para>Sound</para>
      </customization>
      <customization co="no" dd="krab">
         <para>Sound</para>
      </customization>
      <customization co="object" dd="gd">
         <para>MovingImage</para>
         <para>Text</para>
      </customization>
      <customization co="item" dd="gd">
         <para>MovingImage</para>
         <para>Text</para>
      </customization>
      <customization co="no" dd="gd">
         <para>MovingImage</para>
      </customization>
      <customization co="object" dd="p16786coll3" resourceType="text song oh">
         <para>Collection</para>
      </customization>
      <customization co="item" dd="p16786coll3" resourceType="text">
         <para>Text</para>
         <para>StillImage; Text</para>
      </customization>
      <customization co="item" dd="p16786coll3" resourceType="song">
         <para>Sound</para>
         <para>StillImage</para>
         <para>Image</para>
      </customization>
      <customization co="item" dd="p16786coll3" resourceType="oh">
         <para>Sound</para>
         <para>StillImage</para>
         <para>Text</para>
      </customization>
   </examples>
   <additionalInfo/>
   <marc>
      <dcgMarcMapping/>
